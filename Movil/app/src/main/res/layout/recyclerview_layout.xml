<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/temadegradado"
    android:orientation="vertical"
    android:padding="8sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/temadegradadoinverso"
        android:padding="8sp">

        <TextView
            android:id="@+id/txtvw_hum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/humedad"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:layout_centerInParent="true"
            android:layout_margin="16sp"/>

        <TextView
            android:id="@+id/txtvw_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperatura"
            android:textColor="@color/blanco"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_margin="16sp"
            android:layout_toStartOf="@id/txtvw_hum"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/temadegradado">

        <TextView
            android:id="@+id/txtvw_fecha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fecha"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            android:textStyle="bold"
            android:paddingBottom="8sp"
            android:paddingHorizontal="44sp"/>

    </RelativeLayout>

</LinearLayout>